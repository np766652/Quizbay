<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cv_leaderboard_eachuser"
    android:layout_width="200dp"
    android:layout_height="150dp"
    app:cardBackgroundColor="@color/text_light"
    android:layout_gravity="center_horizontal"
    app:cardUseCompatPadding="true"
    android:layout_margin="0.4dp"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp">

    <TextView
        android:id="@+id/tv_pastquizes_quotes"
        android:layout_width="160dp"
        android:layout_height="120dp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:paddingTop="20dp"
        android:textAlignment="center"
        android:layout_gravity="center_horizontal"
        android:text="Those who cannot remember the past are condemned to repeat it."
        android:textSize="15dp">

    </TextView>
</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".activity.StartDynamicQuizActivity">

    <Button
        android:id="@+id/btn_start_dynamic_quiz"
        android:layout_width="156dp"
        android:layout_height="70dp"
        android:layout_marginTop="200dp"
        android:text="Start Quiz"
        android:textSize="20dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_skip_dynamic_quiz"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_skip_dynamic_quiz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="100dp"
        android:text="skip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_start_dynamic_quiz" />
</androidx.constraintlayout.widget.ConstraintLayout>